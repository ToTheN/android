<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment1">

    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.navigationcompo.SplashFragment"
        android:label="fragment_1"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_fragment1_to_fragment2"
            app:destination="@id/fragment2"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_fragment1_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.navigationcompo.HomeFragment"
        android:label="fragment_2"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment2_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.navigationcompo.LoginFragment"
        android:label="fragment_login2"
        tools:layout="@layout/fragment_login2" >
        <action
            android:id="@+id/action_loginFragment_to_fragment2"
            app:destination="@id/fragment2" />
    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.example.navigationcompo.Dialog"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_dialog" >
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>